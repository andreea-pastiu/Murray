<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LocationFormActivity">

    <ImageView
        android:id="@+id/imageViewBackButton"
        android:layout_width="53dp"
        android:layout_height="30dp"
        android:background="@drawable/back_button"
        android:layout_marginTop="@dimen/def_small_margin_top"
        android:layout_marginStart="@dimen/def_margin_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Murray"
        android:textSize="40sp"
        android:textColor="#6677F7"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:fontFamily="@font/nunitoextrabold"/>

    <View
        android:id="@+id/viewLine1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D6DBFF"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle1"
        app:layout_constraintStart_toStartOf="@id/textViewTitle1"/>

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memory assistant"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/nunitosemibold"
        app:layout_constraintTop_toBottomOf="@id/viewLine1"/>

    <TextView
        android:id="@+id/textViewLocationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locations"
        android:textSize="36sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunitobold"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginTop="@dimen/def_medium_margin_top"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle2"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imageViewLocationFormContainer"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@drawable/quiz_form_container"
        android:layout_marginTop="@dimen/def_small_margin_top"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginEnd="@dimen/def_margin_start"
        app:layout_constraintTop_toBottomOf="@id/textViewLocationsTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewLocationsSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a location"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunitosemibold"
        android:layout_marginStart="@dimen/def_medium_margin_start"
        android:layout_marginTop="@dimen/def_small_margin_top"
        app:layout_constraintTop_toTopOf="@id/imageViewLocationFormContainer"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editTextEnterLocationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:hint="Please enter the location name"
        android:textColorHint="#83859C"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunitoregular"
        android:layout_marginStart="@dimen/def_medium_margin_start"
        android:layout_marginEnd="@dimen/def_medium_margin_start"
        android:layout_marginTop="@dimen/def_very_small_medium_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewLocationsSubtitle"/>

    <TextView
        android:id="@+id/textViewChooseMapLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose map location"
        android:textSize="14sp"
        android:textColor="#6677F7"
        android:fontFamily="@font/nunitosemibold"
        android:layout_marginStart="@dimen/def_medium_margin_start"
        android:layout_marginTop="@dimen/def_small_margin_top"
        app:layout_constraintTop_toBottomOf="@id/editTextEnterLocationName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewEnterAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter location address"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunitosemibold"
        android:layout_marginStart="@dimen/def_medium_margin_start"
        android:layout_marginTop="@dimen/def_small_margin_top"
        app:layout_constraintTop_toBottomOf="@id/textViewChooseMapLocation"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editTextEnterAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:hint="Location address"
        android:textColorHint="#83859C"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunitoregular"
        android:layout_marginStart="@dimen/def_medium_margin_start"
        android:layout_marginEnd="@dimen/def_medium_margin_start"
        android:layout_marginTop="@dimen/def_very_small_medium_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEnterAddress"/>

    <Button
        android:id="@+id/buttonAddLocation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_container"
        android:text="Add location"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:fontFamily="@font/nunitobold"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/def_small_margin_top"
        android:layout_marginStart="@dimen/def_medium_margin_start"
        android:layout_marginEnd="@dimen/def_medium_margin_start"
        app:layout_constraintBottom_toBottomOf="@id/imageViewLocationFormContainer"
        app:layout_constraintStart_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>