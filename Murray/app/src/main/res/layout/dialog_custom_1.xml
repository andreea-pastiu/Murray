<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="false"
        android:elevation="8dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageViewContainerGallery"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/text_container_light"
            android:layout_marginTop="@dimen/def_medium_margin_top"
            android:layout_marginStart="@dimen/def_margin_start"
            android:layout_marginEnd="@dimen/def_margin_start"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textViewGalleryTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose from gallery"
            android:textSize="20sp"
            android:textColor="#6677F7"
            android:fontFamily="@font/nunito_bold"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/def_medium_margin_start"
            android:layout_marginEnd="@dimen/def_medium_margin_start"
            android:layout_marginTop="@dimen/def_large_margin_top"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/imageViewContainerPicture"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/text_container_light"
            android:layout_marginTop="@dimen/def_very_large_margin_top"
            android:layout_marginStart="@dimen/def_margin_start"
            android:layout_marginEnd="@dimen/def_margin_start"
            app:layout_constraintTop_toTopOf="@id/imageViewContainerGallery"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textViewPictureTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take picture"
            android:textSize="20sp"
            android:textColor="#6677F7"
            android:fontFamily="@font/nunito_bold"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/def_medium_margin_start"
            android:layout_marginEnd="@dimen/def_medium_margin_start"
            android:layout_marginTop="@dimen/def_very_large_text_margin_top"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/buttonCancelDialog1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_container"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/def_very_large_button_margin_top"
            android:layout_marginBottom="@dimen/def_medium_margin_top"
            android:layout_marginStart="@dimen/def_margin_start"
            android:layout_marginEnd="@dimen/def_margin_start"/>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>