<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageViewBackButton"
        android:layout_width="53dp"
        android:layout_height="30dp"
        android:background="@drawable/back_button"
        android:layout_marginTop="@dimen/def_small_margin_top"
        android:layout_marginStart="@dimen/def_margin_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Murray"
        android:textSize="40sp"
        android:textColor="#6677F7"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:fontFamily="@font/nunitoextrabold"/>

    <View
        android:id="@+id/viewLine1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D6DBFF"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle1"
        app:layout_constraintStart_toStartOf="@id/textViewTitle1"/>

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memory assistant"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/nunitosemibold"
        app:layout_constraintTop_toBottomOf="@id/viewLine1"/>

        <TextView
            android:id="@+id/textViewActivityView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Activity"
            android:layout_marginLeft="16dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/nunitoextrabold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewSurnameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/def_margin_start"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Activity name"
                android:textColor="#545563"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/def_margin_start"
                android:layout_marginTop="@dimen/def_margin"
                android:layout_marginEnd="@dimen/def_margin_start"
                android:background="@drawable/shape"
                android:padding="15dp"
                android:text="Enter activity name"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSurnameLabel" />

            <TextView
                android:id="@+id/textViewNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/def_margin_start"
                android:layout_marginTop="@dimen/def_margin"
                android:fontFamily="@font/nunitosemibold"
                android:text="Descrption"
                android:textColor="#545563"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/editTextSurname" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="@dimen/def_margin_start"
                android:layout_marginTop="@dimen/def_margin"
                android:layout_marginEnd="@dimen/def_margin_start"
                android:background="@drawable/shape"
                android:padding="15dp"
                android:text="Enter description"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="5"
                android:singleLine="false"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewNameLabel" />

                <LinearLayout android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/def_margin"
                    android:layout_marginStart="@dimen/def_margin">

                    <Button
                        android:id="@+id/buttonDate"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select Date"
                        android:onClick="DateTimeClickCancel" />

                    <Button
                        android:id="@+id/buttonTime"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/def_margin"
                        android:text="Select Time"
                        android:onClick="DateTimeClickOK" />
                </LinearLayout>

<!--                <com.dpro.widgets.WeekdaysPicker-->
<!--                    android:id="@+id/weekdays"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:sunday_first_day="false" />-->

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>