<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AccountPasswordActivity">

    <ImageView
        android:id="@+id/imageViewBackButton"
        android:layout_width="53dp"
        android:layout_height="30dp"
        android:background="@drawable/back_button"
        android:layout_marginTop="@dimen/def_small_margin_top"
        android:layout_marginStart="@dimen/def_margin_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewTitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Murray"
        android:textSize="40sp"
        android:textColor="#6677F7"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:fontFamily="@font/nunito_extra_bold"/>

    <View
        android:id="@+id/viewLine1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D6DBFF"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle1"
        app:layout_constraintStart_toStartOf="@id/textViewTitle1"/>

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memory assistant"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/nunito_semi_bold"
        app:layout_constraintTop_toBottomOf="@id/viewLine1"/>

    <TextView
        android:id="@+id/textViewChangePasswordTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change password"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginTop="@dimen/def_medium_margin_top"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle2"/>

    <TextView
        android:id="@+id/textViewOldPasswordLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Old password"
        android:textSize="12sp"
        android:textColor="#545563"
        android:fontFamily="@font/nunito_semi_bold"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginTop="@dimen/def_medium_margin_top"
        app:layout_constraintTop_toBottomOf="@id/textViewChangePasswordTitle"/>

    <EditText
        android:id="@+id/editTextOldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:text="Please enter current password"
        android:textSize="14sp"
        android:textColor="#83859C"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginEnd="@dimen/def_margin_start"
        android:layout_marginTop="@dimen/def_very_small_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewOldPasswordLabel"/>

    <ImageView
        android:id="@+id/imageViewEye1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/password_eye"
        android:layout_marginEnd="@dimen/def_medium_margin_top"
        android:layout_marginTop="@dimen/def_small_medium_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewOldPasswordLabel"/>

    <TextView
        android:id="@+id/textViewNewPasswordLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New password"
        android:textSize="12sp"
        android:textColor="#545563"
        android:fontFamily="@font/nunito_semi_bold"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginTop="@dimen/def_medium_margin_top"
        app:layout_constraintTop_toBottomOf="@id/editTextOldPassword"/>

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:text="Please enter new password"
        android:textSize="14sp"
        android:textColor="#83859C"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginEnd="@dimen/def_margin_start"
        android:layout_marginTop="@dimen/def_very_small_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNewPasswordLabel"/>

    <ImageView
        android:id="@+id/imageViewEye2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/password_eye"
        android:layout_marginEnd="@dimen/def_medium_margin_top"
        android:layout_marginTop="@dimen/def_small_medium_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewNewPasswordLabel"/>

    <TextView
        android:id="@+id/textViewRepeatPasswordLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeat new password"
        android:textSize="12sp"
        android:textColor="#545563"
        android:fontFamily="@font/nunito_semi_bold"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginTop="@dimen/def_medium_margin_top"
        app:layout_constraintTop_toBottomOf="@id/editTextNewPassword"/>

    <EditText
        android:id="@+id/editTextRepeatPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:padding="15dp"
        android:text="Please repeat the new password"
        android:textSize="14sp"
        android:textColor="#83859C"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginEnd="@dimen/def_margin_start"
        android:layout_marginTop="@dimen/def_very_small_margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRepeatPasswordLabel"/>

    <ImageView
        android:id="@+id/imageViewEye3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/password_eye"
        android:layout_marginEnd="@dimen/def_medium_margin_top"
        android:layout_marginTop="@dimen/def_small_medium_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewRepeatPasswordLabel"/>

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_container"
        android:text="Change password"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/def_button_margin_top"
        android:layout_marginBottom="@dimen/def_medium_margin_top"
        android:layout_marginStart="@dimen/def_margin_start"
        android:layout_marginEnd="@dimen/def_margin_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>